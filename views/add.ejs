<!DOCTYPE html>
<html lang="en">
<head>
<%- include('partials/header') %> <!-- Include the header -->
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add New Assignment</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <link rel="stylesheet" href="/css/styles.css"> <!-- Ensure the CSS is linked -->
</head>
<body>
  <div class="container">
    <h2>Add New Assignment</h2>
    <form action="/assignments" method="POST">
      <label for="title">Title</label>
      <input type="text" name="title" id="title" required />

      <label for="subject">Subject</label>
      <input type="text" name="subject" id="subject" required />

      <label for="dueDate">Due Date</label>
      <input type="date" name="dueDate" id="dueDate" required />

      <label for="status">Status</label>
      <select name="status" id="status" required>
        <option value="Incomplete">Incomplete</option>
        <option value="In Progress">In Progress</option>
        <option value="Completed">Completed</option>
      </select>

      <label for="priority">Priority</label>
      <select name="priority" id="priority" required>
        <option value="Low">Low</option>
        <option value="Medium">Medium</option>
        <option value="High">High</option>
      </select>

      <button type="submit">Add Assignment</button>
    </form>
    <a href="/" class="back-to-list">Back to Assignments List</a>
  </div>
</body>
<%- include('partials/footer') %> <!-- Include the footer -->

</html>
